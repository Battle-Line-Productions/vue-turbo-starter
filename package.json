{
  "name": "rollercoaster",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "rm -rf **/@types/react",
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "start:apps": "turbo run start --parallel --filter='./apps/*'",
    "start:vite-app": "turbo run start --filter vite-app",
    "start:nuxt-app": "turbo run start --filter nuxt-app",
    "start:storybook": "turbo run start --filter storybook",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "release": "tsx scripts/release.ts"
  },
  "devDependencies": {
    "@types/node": "^18.6.1",
    "@types/prompts": "^2.4.0",
    "@types/semver": "^7.3.10",
    "config": "workspace:*",
    "conventional-changelog-cli": "^2.2.2",
    "execa": "^6.1.0",
    "picocolors": "^1.0.0",
    "prettier": "^2.7.1",
    "prompts": "^2.4.2",
    "semver": "^7.3.7",
    "simple-git-hooks": "^2.8.0",
    "tsx": "^3.8.2",
    "ts-node": "^10.9.1",
    "turbo": "latest",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": ">=10",
    "pnpm": ">=3"
  },
  "simple-git-hooks": {
    "commit-msg": "pnpm exec ts-node scripts/verifyCommit.ts $1"
  },
  "packageManager": "pnpm@7.9.5"
}